description "UiTPAS.be website frontend"
start on runlevel [2345]
stop on runlevel [!2345]

respawn

setuid www-data
setgid www-data

script
    set -a
    [ -f /etc/default/uitpas-website-frontend ] && . /etc/default/uitpas-website-frontend
    chdir /var/www/uitpas-website-frontend
    exec /usr/bin/node node_modules/nuxt/bin/nuxt.js start
end script
